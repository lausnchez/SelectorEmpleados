<Window x:Class="empleadosNoSeQue.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:empleadosNoSeQue"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF232323"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
            <Label Foreground="White" FontFamily="Bahnschrift" FontSize="18" Width="100">Usuario: </Label>
            <TextBox x:Name="txt_usuario" Width="250" MaxWidth="250" Background="#FF3A3A3A" BorderBrush="{x:Null}" SelectionBrush="#FFC1C1C1" Foreground="White" VerticalAlignment="Center" Height="30"></TextBox>
            <Label Foreground="White" FontFamily="Bahnschrift" FontSize="18" Width="100" Margin="0,20,0,0">Clave: </Label>
            <PasswordBox x:Name="txt_clave" Width="250" MaxWidth="250" Margin="0,20,0,0" Background="#FF3A3A3A" BorderBrush="{x:Null}" SelectionBrush="#FFC1C1C1" Foreground="White" VerticalAlignment="Center" Height="30"></PasswordBox>
        </WrapPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btn_registro" Width="150" Margin="10" Background="#FF3A3A3A" BorderBrush="{x:Null}" Foreground="White" Click="btn_registro_Click">Registrarse</Button>
            <Button x:Name="btn_entrar" Width="150" Margin="10" Background="#FF3A3A3A" Foreground="White" BorderBrush="{x:Null}" Click="btn_entrar_Click">Entrar</Button>
        </StackPanel>
    </Grid>
</Window>
