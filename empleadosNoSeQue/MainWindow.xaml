<Window x:Class="empleadosNoSeQue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:empleadosNoSeQue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="425"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label x:Name="lbl_nombreUsuario" HorizontalAlignment="Right" Margin="0,5,20,0" FontWeight="Bold">NombreUsuario</Label>
            <ListBox 
                x:Name="listBox_empleados"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Height= "281" Width= "375"
                Margin="0,10,0,0">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image 
                                Grid.Column="0" 
                                Source="imagenes/placeholder.jpg"
                                Margin="5,5,20,5"
                                Height="65" Width="65"
                            />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold" Text="{Binding ID}" FontFamily="Bahnschrift"/>
                                <TextBlock Text="{Binding Nombre}" FontFamily="Bahnschrift"/>
                                <TextBlock Text="{Binding Apellidos}" FontFamily="Bahnschrift"/>
                                <TextBlock Text="{Binding Tlf}" FontFamily="Bahnschrift"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button 
                    x:Name="btn_leerTodos"
                    Content="Leer Todos"  
                    VerticalAlignment="Top" 
                    Height="45" Width="100" 
                    Click="btn_leerTodos_Click" 
                    FontFamily="Bahnschrift"
                    Margin="5,15,5,15"
                />
                <Button 
                    x:Name="btn_limpiar"
                    Content="Limpiar"
                    HorizontalAlignment="Left" 
                    Height="45" 
                    VerticalAlignment="Top" 
                    Width="100" 
                    Click="btn_limpiar_Click" 
                    FontFamily="Bahnschrift"
                    Margin="5,15,5,15"
                />
                <Button 
                    x:Name="btn_eliminar"
                    Content="Eliminar"
                    HorizontalAlignment="Left" 
                    Height="45" 
                    VerticalAlignment="Top" 
                    Width="100" 
                    Click="btn_eliminar_Click" 
                    FontFamily="Bahnschrift"
                    Margin="5,15,5,15"
                />
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Width="275" Height="350" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock 
                Text="Empleados"
                HorizontalAlignment="Left"
                Margin="35,16,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="47" Width="340" 
                TextDecorations="Underline" 
                FontFamily="Bahnschrift" 
                FontSize="30" 
                FontWeight="Bold"
                />
            <Label Content="ID:" Margin="35,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" FontFamily="Bahnschrift" FontWeight="Bold"/>
            <TextBox x:Name="txt_id" Margin="35,05,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Height="22"/>
            <Label Content="Nombre:" Margin="35,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" FontFamily="Bahnschrift" FontWeight="Bold"/>
            <TextBox x:Name="txt_nombre" Margin="35,5,0,0" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Height="22"/>
            <Label Content="Apellidos:" Margin="35,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" FontFamily="Bahnschrift" FontWeight="Bold"/>
            <TextBox x:Name="txt_apellidos" Margin="35,5,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Height="22"/>
            <Label Content="Teléfono:" Margin="35,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" FontFamily="Bahnschrift" FontWeight="Bold"/>
            <TextBox x:Name="txt_tlf" Margin="35,5,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Height="22"/>
            <Button x:Name="btn_guardar" Height="35" HorizontalAlignment="Left" Width="219" Margin="35,20,0,0" Click="btn_guardar_Click">Guardar</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Border BorderThickness="1" BorderBrush="Black" Height="125" Width="125" Margin="0,100,25,0">
                <Image x:Name="img_empleado" Source="imagenes/placeholder.jpg"/>
            </Border>
            <Button x:Name="btn_foto" Margin="0,5,25,5" Click="btn_foto_Click">Foto</Button>
        </StackPanel>
    </Grid>
    
</Window>
